{
  "name": "landing-page-template",
  "description": "Landing page template utilizing Glastor, React, Typescript, and Tailwind CSS for rapid development and responsive design.",
  "author": {
    "name": "Andres Antonio Cardoso",
    "email": "glastor.info@gmail.com",
    "url": "https://github.com/glastor-dev"
  },
  "license": "GNU General Public License v3.0",
  "keywords": [
    "react",
    "typescript",
    "glastor",
    "glastor/ui",
    "tailwind",
    "landing-page",
    "template",
    "responsive-design"
  ],
  "private": true,
  "version": "12.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:check": "eslint . --ext ts,tsx --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md,json}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json}\" --ignore-path .gitignore",
    "code-quality": "npm run lint:fix && npm run format",
    "code-check": "npm run lint:check && npm run format:check",
    "prepare": "husky",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "validate-products": "node scripts/validate-products.mjs"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-spring/web": "^10.0.3",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dexie": "3.2.7",
    "embla-carousel-react": "^8.6.0",
    "firebase": "12.4.0",
    "framer-motion": "^12.23.22",
    "fuse.js": "7.1.0",
    "i18next": "^25.5.2",
    "lucide-react": "^0.424.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.0.0",
    "react-intersection-observer": "^9.16.0",
    "react-loading-skeleton": "^3.5.0",
    "react-router-dom": "6.30.1",
    "sonner": "2.0.7",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.1.0",
    "zod": "4.1.12",
    "zustand": "5.0.8"
  },
  "overrides": {
    "react-router-dom": "6.30.1",
    "react-router": "6.30.1",
    "history": "^5"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/typography": "0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.19",
    "cssnano": "7.1.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "15.5.2",
    "postcss": "^8.4.38",
    "postcss-import": "16.1.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "5.4.20",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
